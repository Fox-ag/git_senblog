<div class="contents row">
  <%= form_tag("/journals/#{@journal.id}", method: :patch ) do %>
    <h3>
      編集しちゃおう
    </h3>
    <input type="text" name="title" value="<%= @journal.title %>" placeholder="Title" autofocus="true">
    <textarea name="text" placeholder="text" rows="10" cols="30"><%= @journal.text %></textarea>
    <input type="submit" value="SEND">
  <% end %>
</div>