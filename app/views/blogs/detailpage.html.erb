  <div class="section-29">
    <% if user_signed_in? && current_user.id == @blog.user_id %>
    <% end %>
    <div class="div-block-38">
      <div class="div-block-40">
        <h1><%= simple_format(@blog.title) %></h1>
      </div>
      <div class="div-block-41">
        <p class="paragraph-9"><%= @blog.text %></p>
      </div>
      <div class="div-block-118">
        <% @blog_photos.each do |p| %>
        <div class="div-block-119">
            <%= image_tag p.photo_url, style: "max-width: 200px; max-height: 200px" %>
        </div>
        <% end %>
      </div>
      <div class="div-block-121">
        <div class="text-block-45">作成日時: 2020年2月20日</div>
      </div>
      <div class="div-block-42">
        <% if current_user.already_liked?(@blog) %>
          <a class="button-6 w-button"><%= button_to 'いいねを取り消す', blog_like_path(@blog), method: :delete %></a>
        <% else %>
          <a class="button-6 w-button"><%= button_to 'いいね', blog_likes_path(@blog) %></a>
        <% end %>
        <div class="text-block-46">いいね件数: <%= @blog.likes.count %></div>
      </div>
      <div class="div-block-122">
        <div>投稿者: </div>
        <div><%= simple_format(@blog.user.nickname) %></div>
      </div>
    </div>
    <div class="div-block-44">
      <div class="div-block-124">
        <h1 class="heading-28">自己紹介</h1>
      </div>
      <div class="div-block-123">
        <div><%= simple_format(@blog.user.selfintroduction) %></div>
      </div>
    </div>
  </div>
