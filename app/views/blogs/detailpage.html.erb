<!-- ここからタイムラインブログ詳細20201109 PC ver はじまり! -->
<div class="pc_area">
  <div class="section-blog-show">
    <% if user_signed_in? && current_user.id == @blog.user_id %>
     <% end %>
      <div class="blog-show">
        <div class="div-blog-show-title">
          <h2 class="blog-show-title-word"><%= simple_format(@blog.title) %></h2>
        </div>
        <p class="blog-show-sentence"><%= @blog.text %></p>
        <div class="blog-show-photo">
          <% @blog_photos.each do |p| %>
          <div class="blog-show-photo-left"><%= image_tag p.photo_url, style: "max-width: 420px; max-height: 300px" %></div>
          <!--<div class="blog-show-photo-right">%= image_tag p.photo_url, style: "max-width: 200px; max-height: 200px" %></div>-->
          <% end %>
          <% @blog_images.each do |q| %>
          <div class="blog-show-photo-right"><%= image_tag q.image_url, style: "max-width: 420px; max-height: 300px" %></div>
          <% end %>
        </div>
        <div class="blog-show-detail">
          <div class="blog-show-nickname">
            <div class="blog-show-left-nickname">投稿者:</div>
            <div class="blog-show-right-nickname"><%= simple_format(@blog.user.nickname) %></div>
          </div>
          <div class="blog-show-made-date">
            <div class="blog-show-left-date">作成日:</div>
            <div class="blog-show-right-date"><%= @blog.created_at %></div>
          </div>
        </div>
        <div class="blog-show-readit">
          <div class="blog-show-readit-area">
            <div class="readit-area-text">
              <% if current_user.already_liked?(@blog) %>
                  <%= button_to '読んだよ！を取り消す', blog_like_path(@blog), method: :delete %>
              <% else %>
                  <%= button_to '読んだよ！', blog_likes_path(@blog) %>
              <% end %>
            </div>
          </div>
          <div class="readit-block">
            <div class="readit-block-word">読んだよ！件数:</div>
            <div class="readit-block-var"><%= @blog.likes.count %></div>
          </div>
        </div>
      </div>
      <div class="self-show">
        <div class="welf-show-title">
          <h2 class="self-show-heading">Heading</h2>
        </div>
        <p class="self-show-paragraph"><%= simple_format(@blog.user.selfintroduction) %></p>
      </div>
      
      <div class="self-show">
        <% if current_user && current_user.commenter == "normal" %>
        <%= form_tag("/blogs/#{@blog.id}/comments", method: :post) do %>
          <textarea name="text" placeholder="コメントする" rows="2" cols="30"></textarea>
          <input type="submit" value="SEND">
        <% end %>
        <% end %>
    </div>
    
    <div class="self-show">
        <% if @comments %>
        <% @comments.each do |comment| %>
        <%= link_to 'コメントを削除する', blog_comment_path(@blog, comment), confirm: 'Are you sure?', method: :delete %>
          <p>
           
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
      
  </div>
</div>
<!-- ここまでタイムラインブログ詳細20201109 PC ver おわり! -->

