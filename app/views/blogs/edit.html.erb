<div class="contents row">
  <%= form_tag("/blogs/#{@blog.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <input type="text" name="title" value="<%= @blog.title %>" placeholder="Title" autofocus="true">
    <textarea name="text" placeholder="text" rows="10" cols="30"><%= @blog.text %></textarea>
    <input type="submit" value="SEND">
  <% end %>
</div>