<!-- ここから新ブログ詳細2020 new はじまり! -->
<div class="journal-detail-body">
    <div class="journal-detail-section">
      <div class="journal-detail-title">
        <h1 class="heading-26"><%= simple_format(@blog.title) %></h1>
      </div>
      <div class="journal-detail-paragraph">
        <p class="journal-detail-paragraph-words"><%= simple_format(@blog.text) %></p>
      </div>
      <div class="journal-detail-photo-section">
        <% @blog_photos.each do |p| %>
        <div class="journal-detail-photo-left"><%= image_tag p.photo_url, style: "max-width: 200px; max-height: 200px" %></div>
        <% end %>
        <!--<div class="journal-detail-photo-right"></div>-->
      </div>
      <div class="journal-detail-create-date">
        <div class="jouranl-detail-create-date-words">作成日時 : 2020年2月22日</div>
      </div>
       <div class="journal-detail-create-date">
        <div class="jouranl-detail-create-date-words">
          <a href="/users/<%= @blog.user.id %>">
          <span>投稿者</span>
          <%= @blog.user.nickname %>
          </a>
        </div>
      </div>
      <div class="journal-detail-create-date">
        <% if user_signed_in? && current_user.id == @blog.user_id %>
          <ul class="more_list">
            <li>
              <%= link_to '編集しちゃおう', "/blogs/#{@blog.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除しちゃおう', "/blogs/#{@blog.id}", method: :delete %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
<!-- ここまで新ブログ詳細2020 new おわり! -->
