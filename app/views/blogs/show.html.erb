<div class="contents row">
    
    <% if user_signed_in? && current_user.id == @blog.user_id %>
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集しちゃおう', "/blogs/#{@blog.id}/edit", method: :get %>
          </li>
          <li>
            <%= link_to '削除しちゃおう', "/blogs/#{@blog.id}", method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <%= simple_format(@blog.title) %>
    <%= simple_format(@blog.text) %>
    <span class="name">
      <a href="/users/<%= @blog.user.id %>">
        <span>投稿者</span><%= @blog.user.nickname %>
      </a>
    </span>
 
</div>