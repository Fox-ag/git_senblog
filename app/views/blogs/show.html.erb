<!-- ここから新ブログ詳細20201109 PCver new はじまり! -->
<div class="pc_area">
  <div class="section-blog-show">
    <div class="blog-show">
      <div class="div-blog-show-title">
        <h2 class="blog-show-title-word"><%= simple_format(@blog.title) %></h2>
      </div>
      <p class="blog-show-sentence"><%= simple_format(@blog.text) %></p>
      <div class="blog-show-photo">
        <% @blog_photos.each do |p| %>
        <div class="blog-show-photo-left"><%= image_tag p.photo_url, style: "max-width: 420px; max-height: 300px" %></div>
        <% end %>
        <% @blog_images.each do |q| %>
        <div class="blog-show-photo-right"><%= image_tag q.image_url, style: "max-width: 420px; max-height: 300px" %></div>
        <% end %>
      </div>
      <div class="blog-show-detail">
        <div class="blog-show-nickname">
          <div class="blog-show-left-nickname">投稿者:</div>
          <div class="blog-show-right-nickname"><%= @blog.user.nickname %></div>
        </div>
        <div class="blog-show-made-date">
          <div class="blog-show-left-date">作成日時:</div>
          <div class="blog-show-right-date"><%= @blog.created_at %></div>
        </div>
      </div>
      <div class="div-edit-section-journal">
        <% if current_user.blogger == "general" %>
        <% if user_signed_in? && current_user.id == @blog.user_id %>
        <div class="div-edit-journals">
          <%= link_to '編集しちゃおう', "/blogs/#{@blog.id}/edit", method: :get %>
        </div>
        <div class="div-delete-journals">
          <%= link_to '削除しちゃおう', "/blogs/#{@blog.id}", method: :delete %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
    
    <div class="self-show">
        <% if @comments %>
          <% @comments.each do |comment| %>
          <%= link_to 'コメントを削除する', blog_comment_path(@blog, comment), confirm: 'Are you sure?', method: :delete %>
            <p><%= comment.text %></p>
          <% end %>
        <% end %>
    </div>
</div>
